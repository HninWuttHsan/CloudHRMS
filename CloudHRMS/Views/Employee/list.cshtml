
@model IList<CloudHRMS.Models.ViewModels.EmployeeViewModel>

<h1>
    Employee List Information
</h1>
@if (TempData["Msg"] != null)
{
    <div class = "alert alert-success" role="alert">
        @TempData["Msg"]
    </div>
}
<table class="table table-dark" >
    <thead>
        <tr>
            <th scope="col">#</th> <!-- sr no-->
            <th scope="col">Code</th>
            <th scope="col">Name</th>
            <th scope="col">Email</th>
            <th scope="col">Gender</th>
            <th scope="col">BasicSalary(MMK)</th>
            <th scope="col">DOB</th>
            <th scope="col">DOE</th>
            <th scope="col">DOR</th><!--StackHolder-->
            <th scope="col">Address</th>
            <th scope="col">Phone</th>
            <th scope="col">Actions</th>
        </tr>
    </thead>
    <tbody><!-- for record all-->

        @foreach (var item in Model) // Model is build in model
        {
            <tr>
                <th scope="row">@(Model.IndexOf(item) + 1)</th>
                <td>@item.Code</td>
                <td>@item.Name</td>
                <td>@item.Email</td>
                <td>@item.Gender</td>
                <td>@item.BasicSalary</td>
                <td>@item.DOB.ToString("yyyy-MM-dd")</td>
                <td>@item.DOE.ToString("yyyy-MM-dd")</td>
                <td>@item.DOR.</td>
                <td>@item.Address</td>
                <td>@item.Phone</td>
                <td>
                    <a href="/employee/edit?id=@item.Id" role="button" class="btn btn-success"> Edit </a>
                    <a href="/employee/deletebyId?id=@item.Id" role="button" class="btn btn-danger" onclick="return confirm('Are you to delete this record')";> Delete </a>
                </td>
            </tr>

        }
    </tbody>
</table>